generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Location {
  id       String           @id @default(uuid())
  locationName     String           @unique

  students Student[]
}

model Subject{
  id String @id @default(uuid())
  subjectName String @unique

  sessions TuitionSession[]
}

model Student {
  id        String           @id @default(uuid())
  name      String
  
  locationId  String
  location  Location @relation(fields:[locationId], references:[id], onDelete:Cascade)

  rate    Float
  sessions TuitionSession[]
  @@index([locationId])
}


model TuitionSession {
  id              String   @id @default(uuid())
  date            DateTime
  startTime       DateTime
  endTime         DateTime
  durationMinutes Decimal
  totalMoney      Decimal

  subjectId   String
  subject Subject @relation(fields:[subjectId],references:[id],onDelete:Cascade)

  studentId  String
  student  Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  
  @@index([studentId])
  @@index([date])
}